<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeScreenFragment"
    android:id="@+id/nav_graph">

    <fragment android:name="br.com.dev.rickandmorty.ui.screens.HomeScreenFragment"
        android:id="@+id/homeScreenFragment"
        android:label="Home Screen"
        tools:layout="@layout/fragment_homescreen"
        >
        <action
            android:id="@+id/action_homeScreenFragment_to_detailCharacterScreen"
            app:destination="@id/detailCharacterScreen" />
        <action
            android:id="@+id/action_homeScreenFragment_to_favoriteCharacterScreen"
            app:destination="@id/favoriteCharacterScreen" />
    </fragment>

    <fragment android:name="br.com.dev.rickandmorty.ui.screens.HomeScreenFragment"
        android:id="@+id/detailCharacterScreen"
        android:label="Home Screen"
        tools:layout="@layout/fragment_detail_character_screen"
        >
        <action
            android:id="@+id/action_detailCharacterScreen_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment" />
    </fragment>

    <fragment android:name="br.com.dev.rickandmorty.ui.screens.HomeScreenFragment"
        android:id="@+id/favoriteCharacterScreen"
        android:label="Home Screen"
        tools:layout="@layout/fragment_favorite_character_screen"
        >
        <action
            android:id="@+id/action_favoriteCharacterScreen_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment" />
    </fragment>



</navigation>