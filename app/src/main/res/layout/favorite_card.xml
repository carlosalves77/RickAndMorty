<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/black"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="32dp">
            <ImageView
                android:id="@+id/favorite_character_image"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/rick1"
                android:contentDescription="@string/rick_exemple"
                android:scaleType="centerCrop"
                />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            >

            <TextView
                android:id="@+id/character_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_medium"
                android:textColor="#BCFF4C"
                android:textSize="14sp"
                tools:text="Rick Sanchez"

                />

            <TextView
                android:id="@+id/species_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_medium"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="human"

                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center">

            <ImageView
                android:id="@+id/favorite_star"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="18dp"
                android:contentDescription="@string/favorite_star"
                android:src="@drawable/favorite_green_star" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>