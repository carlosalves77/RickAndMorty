<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="127dp"
    android:layout_height="141dp"
    android:background="@drawable/shape_character_row"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:contentDescription="@string/rick_exemple"
        android:src="@drawable/rick_exemple" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/favorite_star"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="@string/favorite_star"
            android:src="@drawable/favorite_green_star"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/character_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_medium"
                android:textSize="14sp"
                android:text="Rick Sanchez"
                android:textColor="#BCFF4C"
                />


            <TextView
                android:id="@+id/character_specie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="human"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </LinearLayout>





</LinearLayout>